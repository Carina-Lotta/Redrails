<%= form_for(@idea, :html => {:class =>"form-horizontal", :role =>"form"}) do |f| %>
  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% @idea.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name, :class => "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control", :placeholder => "Write the idea name" %>
    </div>
  </div>

  <div class="field form-group">
  <%= f.label :description, :class => "control-label col-sm-2" %>
    <div class="col-sm-10">
    <%= f.text_field :description, :class => "form-control", :placeholder => "The short description should go here" %>
    </div>
  </div>

  <div class="field form-group">
  <%= f.label :text, :class => "control-label col-sm-2" %>
    <div class="col-sm-10">
	    <%= f.text_field :text, :class => "form-control", :placeholder => "The long text should go here
	    "  %>
    </div>
  </div>

  <div class="field form-group">
  <%= f.label :picture, :class => "control-label col-sm-2" %>
    <div class="col-sm-10">
    <%= f.file_field :picture %>
    </div>
  </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
